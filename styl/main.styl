body
    background: black
    color: white
    font-size: 2vw
    padding: 0
    margin: 0
    font: 20px "Press Start 2P"

article
	margin: 0 auto
	width: 1024px
	height: 768px
	box-sizing: border-box

section
	width: 1024px
	height: 768px
	padding: 20px
	box-sizing: border-box
	display: none
	opacity: 0
	transition: opacity 1s .5s
	&.current
		display: block
		opacity: 1
	
@font-face
	font-family: "Press Start 2P"
	src: url("../fonts/PressStart2P-Regular.ttf")

@import('gamepad')
@import('animations')
@import('slides')