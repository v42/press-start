body
    background: black
    color: white
    font-size: 2vw
    padding: 10vh 5vw
    margin: 0
    overflow: hidden
    font: 20px "Press Start 2P"

article
	border: 1px solid white
	width: 90vw
	height: 80vh
	padding: 5vh 5vw
	box-sizing: border-box

section
	width: 80vw
	height: 70vh
	box-sizing: border-box
	vertical-align: middle
	text-align: center

.button
	display: inline-block
	width: 10px
	height: 10px
	background: gray
	&.pressed
		background: red
	
@font-face
	font-family: "Press Start 2P"
	src: url("../fonts/PressStart2P-Regular.ttf")